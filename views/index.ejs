<%-include("./partials/header") %>

<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if (message) { %>
      <div
        class="alert alert-dismissible fade show alert-<%=message.type %>"
        role="alert"
      >
        <button
          class="btn-close"
          type="button"
          data-bs-dismiss="alert"
          aria-label="close"
        ></button>
        <strong><%=message.message %></strong>
      </div>
      <% }if (users != '') { %>
      <div class="table-responsive">
        <table class="table table-stripped text-center my-4">
          <thead>
            <tr class="table-dark">
              <th>ID</th>
              <th>Image</th>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((row,index) => { %>
            <tr class="align-middle">
              <th><%=index %></th>
              <th>
                <img
                  src="<%=row.image %>"
                  width="50px"
                  height="50px"
                  alt="image"
                  class="img-thumbnail"
                />
              </th>
              <th><%=row.name %></th>
              <th><%=row.email %></th>
              <th><%=row.phone %></th>
              <td>
                <a href="/edit/<%=row._id  %>" class="text-success"
                  ><i class="ri-edit-box-fill text-success"></i
                ></a>
                <a href="/delete/<%=row._id %>" class="text-danger"
                  ><i class="ri-delete-bin-5-fill text-danger"></i
                ></a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% }else{ %>
      <p class="text-center+">No users found</p>
      <% } %>
    </div>
  </div>
</div>

<%-include("./partials/footer") %>
